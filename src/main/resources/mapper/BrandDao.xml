<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.backend.main.dao.BrandDao">

    <insert id="addBrand" parameterType="com.example.backend.main.domain.entity.Brand">
        insert into brand(brand_id, brand_name, brand_name_cn, brand_rank, brand_description, deleted)
        values (#{brandId}, #{brandName}, #{brandNameCN}, #{brandRank}, #{brandDescritption}, #{deleted})
    </insert>

    <select id="selectBrandByName" parameterType="String" resultType="com.example.backend.main.domain.entity.Brand">
        select *
        from brand
        where deleted = 0
          and brand_name = #{brandName}
    </select>

    <select id="selectAllBrand" parameterType="String" resultType="com.example.backend.main.domain.entity.Brand">
        select *
        from brand
        where deleted = 0
    </select>


</mapper>